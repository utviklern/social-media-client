{
  "useTabs": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 70,
        "tabWidth": 2,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "proseWrap": "never"
      }
    },
    {
      "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
      "options": {
        "useTabs": false
      }
    }
  ]
}